                <span className="hidden md:block font-medium text-gray-700">Sarah Johnson</span>
              </div>
            </div>
          </div>
        </div>
      </header>

      {/* Main Content */}
      <main className="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-8">
        {activeTab === 'dashboard' && renderDashboard()}
        {activeTab === 'content' && renderContentCreator()}
        {activeTab === 'projects' && <div className="text-center py-12 text-gray-500">Projects feature coming soon...</div>}
        {activeTab === 'analytics' && <div className="text-center py-12 text-gray-500">Analytics feature coming soon...</div>}
      </main>
    </div>
  );
};

export default KommsAI;
